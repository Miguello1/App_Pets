<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvChandosin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    cardview:cardCornerRadius="@dimen/corner_cv">


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_icon"
        android:layout_marginRight="@dimen/margin_icon"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_chandosin_perfil"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/bulldog_ingles_2"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_numerolikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/margin_icon"/>

            <ImageView
                android:id="@+id/btnLike_amarillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bone2"
                android:rotation="140"
                android:layout_marginLeft="@dimen/margin_icon"/>


        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>