<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.miguello.apppets.fragments.perfil_mascota">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circulaimg"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="@dimen/circulo_imagen"
        android:layout_height="@dimen/circulo_imagen"
        android:src="@drawable/bulldog_ingles_2"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_chandosin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/chandosin"
        android:textSize="@dimen/nombre_mascota"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/rv_mascotasperfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

</FrameLayout>

